<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/running_abstract"
    tools:context=".SuccessActivity">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="204dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/successText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successMessage"
            android:background="?colorSecondary"
            android:textColor="?colorOnSecondary"
            android:textSize="19dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupPhoneNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonPhoneNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:text="0993232465"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonPhoneNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:text="0996231252"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonPhoneNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:text="0992221639"
                android:textSize="16sp" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendButton"
            android:text="@string/sendSMS"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>